{
    "rules": {
        // Possible errors


        // Best practices
        "complexity"                 : [ 1, 6 ],
        "consistent-return"          : [ 2 ],
        "curly"                      : [ 2 ],
        "eqeqeq"                     : [ 2, "allow-null" ],
        "no-invalid-this"            : [ 2 ],
        "no-loop-func"               : [ 2 ],

        // Strict mode
        "strict"                     : [ 2, "function" ],

        // Variables
        "no-shadow-restricted-names" : [ 2 ],
        "no-undef-init"              : [ 2 ],
        "no-unused-vars"             : [ 2, { "args": "none" } ],
        "no-use-before-define"       : [ 1, "nofunc" ],

        // Stylistic issues (TODO)
        "brace-style"                : [ 2 ],
        "eol-last"                   : [ 1, "windows" ],
        "indent"                     : [ 2, "tab" ],
        "linebreak-style"            : [ 2, "unix" ],
        "max-depth"                  : [ 2, 3 ],
        "no-mixed-spaces-and-tabs"   : [ 2, "smart-tabs"],
        "no-multiple-empty-lines"    : [ 2, { "max": 3} ],
        "quotes"                     : [ 2, "single" ],
        "semi"                       : [ 2, "always" ]
    },
    "env": {
        "amd"      : true,
        "browser"  : true,
        "commonjs" : true,
        "es6"      : true
    },
    "extends": "eslint:recommended"
}
